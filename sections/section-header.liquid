<link rel="stylesheet" href="{{- 'header.css' | asset_url -}}">

<div class="container">
    <div class="row align-items-center">
        <div class="col-3 d-lg-none">
            <button class="mob-btn">
                <span></span>
            </button>
        </div>
        <div class="col-lg-2 col-6">
            <a href="/" class="logo">
                {%- if section.settings.logo != blank -%}
                    <img src="{{ section.settings.logo | img_url: 'master' }}"
                        alt="{{ shop.name | escape }}"
                        loading="lazy"
                        width="120"
                        height="48"
                        >
                {%- endif -%}
            </a>
        </div>
        <nav class="col-lg-8 header-nav d-none d-lg-block">
            <ul class="header-nav__list d-flex justify-content-between">
                <li><a href="">Suspension</a></li>
                <li><a href="">Suspension</a></li>
                <li><a href="">Suspension</a></li>
                <li><a href="">Suspension</a></li>
                <li><a href="">Suspension</a></li>
                <li><a href="">Suspension</a></li>
            </ul>
        </nav>
        <div class="col-lg-2 col-3">
            <div class="header__links d-flex justify-content-between">
                <a href="" class="header__search">{% render 'icon-search' %}</a>
                <a href="" class="header__customer">{% render 'icon-customer' %}</a>
                <a href="" class="header__cart">{% render 'icon-busket' %}</a>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.header.name",
  "tag": "header",
        "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": "LOGO"
        }
    ]
}
{% endschema %}